size($w, $h)
    width $w
    height $h

$width = 375
$root-font-size = 375 / 20

px2rem(val)
    (val / $root-font-size)rem
.This
    width: 20rem
    .grid-wrap
        size(px2rem(300), px2rem(300))
        background-color #34495e
        display grid
        // grid-template-rows px2rem(200) 1fr 1fr
        // grid-template-columns 1fr px2rem(50) 1fr
        // grid-gap px2rem(10)
        grid-template-rows repeat(3, px2rem(50))
        grid-template-columns repeat(4, 1fr)
        grid-gap px2rem(10)
        // grid-template repeat(3, 1fr)/repeat(3, 1fr)
        border px2rem(10) solid #2c3e50
        border-radius px2rem(10)
        margin 0 auto
        .grid-item
            background-color #eee
            display flex
            justify-content center
            align-items center
            border-radius px2rem(5)
        .grid-item:nth-child(6)
            // grid-row-start 1
            // grid-row-end 2
            // grid-column-start 2
            // grid-column-end 3
            // grid-row 1/2
            // grid-column 2/3
            grid-area 1/2/2/3